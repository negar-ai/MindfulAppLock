<MainScreen>:
    orientation: 'vertical'
    padding: 40
    spacing: 30
    canvas.before:
        Color:
            rgba: 0.99, 0.97, 0.93, 1  # Off white background
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: root.message
        font_name: "Chocolate Covered Raindrops.ttf"
        font_size: 50
        color: 0, 0.31, 0.31, 1  # Deep Teal text
        halign: 'center'
        valign: 'middle'
        text_size: self.size
        size_hint: (1, 0.4)


    Button:
        text: "Start Challenge"
        font_name: "Chocolate Covered Raindrops BOLD.ttf"
        font_size: 60
        background_normal: ''
        background_color: 0.34, 0.71, 0.73, 1  # Teal Blue
        color: 0, 0.31, 0.31, 1  # Deep Teal text
        size_hint: (0.8, 0.12)
        pos_hint: {"center_x": 0.5}
        radius: [30]
        on_press: root.open_app()

    Button:
        text: "Emergency Access"
        font_name: "Chocolate Covered Raindrops BOLD.ttf"
        font_size: 60
        background_normal: ''
        background_color: 1, 0.31, 0.17, 1  # Orange
        color: 1, 1, 1, 1  # White text
        size_hint: (0.8, 0.12)
        pos_hint: {"center_x": 0.5}
        on_press: root.emergency_unlock()
